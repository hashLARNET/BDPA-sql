# =============================================================================
# BDPA Los Encinos - Configuración Completa de Variables de Entorno
# =============================================================================
# 
# Este archivo contiene todas las variables de entorno necesarias para:
# - Backend FastAPI
# - Frontend Tkinter
# - Configuración de la obra Los Encinos
#
# Instrucciones:
# 1. Copiar este archivo como .env
# 2. Completar las variables de Supabase
# 3. Ajustar configuraciones según el entorno
# =============================================================================

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE SUPABASE (OBLIGATORIO)
# -----------------------------------------------------------------------------
# Obtener desde: https://supabase.com/dashboard/project/[tu-proyecto]/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# -----------------------------------------------------------------------------
# CONFIGURACIÓN JWT (BACKEND)
# -----------------------------------------------------------------------------
# IMPORTANTE: Cambiar SECRET_KEY en producción
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LA APLICACIÓN (BACKEND)
# -----------------------------------------------------------------------------
APP_NAME=BDPA - Los Encinos API
APP_VERSION=1.0.0
DEBUG=True

# -----------------------------------------------------------------------------
# CONFIGURACIÓN CORS (BACKEND)
# -----------------------------------------------------------------------------
# Agregar dominios de frontend si se despliega en web
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE ARCHIVOS (BACKEND)
# -----------------------------------------------------------------------------
# Tamaño máximo de archivos en bytes (10MB por defecto)
MAX_FILE_SIZE=10485760
# Tipos de imagen permitidos
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LA OBRA LOS ENCINOS (BACKEND)
# -----------------------------------------------------------------------------
OBRA_ID=los-encinos-001
TOTAL_UNIDADES=1247

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DEL FRONTEND TKINTER
# -----------------------------------------------------------------------------
# URL del backend API (cambiar si se despliega en servidor remoto)
API_BASE_URL=http://localhost:8000

# Configuración de la ventana principal
APP_TITLE=BDPA - Los Encinos
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
THEME=arc

# Configuración de la aplicación desktop
APP_VERSION_FRONTEND=1.0.0
DEBUG_FRONTEND=True

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE TIMEOUTS Y REINTENTOS (FRONTEND)
# -----------------------------------------------------------------------------
# Timeout para requests HTTP en segundos
API_TIMEOUT=30
# Número máximo de reintentos
MAX_RETRIES=3
# Delay entre reintentos en segundos
RETRY_DELAY=1

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE DIRECTORIOS (FRONTEND)
# -----------------------------------------------------------------------------
# Directorio para archivos temporales
TEMP_DIR=./temp
# Directorio para cache
CACHE_DIR=./cache

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LOGS
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=bdpa.log

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE DESARROLLO
# -----------------------------------------------------------------------------
# Puerto y host del backend
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Configuración de desarrollo
RELOAD_ON_CHANGE=True
SHOW_SQL_QUERIES=False

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE PRODUCCIÓN
# -----------------------------------------------------------------------------
# Configurar estas variables para entorno de producción
PRODUCTION=False
SSL_VERIFY=True

# Configuración de backup automático
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE SEGURIDAD AVANZADA
# -----------------------------------------------------------------------------
# Configuración de rate limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuración de HTTPS (producción)
USE_HTTPS=False
SSL_CERT_PATH=
SSL_KEY_PATH=

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE MONITOREO
# -----------------------------------------------------------------------------
# Habilitar métricas de rendimiento
ENABLE_METRICS=False
METRICS_PORT=9090

# Configuración de alertas
ALERT_EMAIL=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# -----------------------------------------------------------------------------
# CONFIGURACIÓN ESPECÍFICA DE LOS ENCINOS
# -----------------------------------------------------------------------------
# Información del proyecto
PROYECTO_NOMBRE=Los Encinos
PROYECTO_UBICACION=Santiago, Chile
PROYECTO_CLIENTE=BDPA

# Configuración de torres (no modificar sin actualizar BD)
TORRES=A,B,C,D,E,F,G,H,I,J
PISOS=1,3
SECTORES=Norte,Poniente,Oriente

# Torres con configuración especial (sin sector Norte)
TORRES_SIN_NORTE=C,H

# Configuración de tipos de trabajo
TIPOS_ESPACIO=unidad,sotu,shaft,lateral,antena
TIPOS_MEDICION=alambrico-t1,alambrico-t2,coaxial,fibra,wifi,certificacion
ROLES_USUARIO=Admin,Supervisor,Tecnico,Ayudante

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE VALIDACIÓN DE MEDICIONES
# -----------------------------------------------------------------------------
# Rangos para validación automática de mediciones
# Alámbrico/Coaxial (dBμV)
RANGO_ALAMBRICO_MIN=45
RANGO_ALAMBRICO_MAX=75

# Fibra Óptica (dBm)
RANGO_FIBRA_MIN=-30
RANGO_FIBRA_MAX=-8

# WiFi (dBm)
RANGO_WIFI_MIN=-80
RANGO_WIFI_MAX=-30

# Zona de advertencia (dB desde los límites)
ZONA_ADVERTENCIA=5

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE INTERFAZ (FRONTEND)
# -----------------------------------------------------------------------------
# Configuración de fuentes
FONT_FAMILY=Arial
FONT_SIZE=10
FONT_SIZE_TITLE=16
FONT_SIZE_HEADER=12

# Configuración de colores (hex)
COLOR_PRIMARY=#3b82f6
COLOR_SUCCESS=#22c55e
COLOR_WARNING=#f59e0b
COLOR_ERROR=#ef4444
COLOR_GRAY=#6b7280

# Configuración de la interfaz
SHOW_TOOLTIPS=True
ENABLE_ANIMATIONS=True
AUTO_REFRESH_INTERVAL=300000

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE CACHE Y PERFORMANCE
# -----------------------------------------------------------------------------
# Cache de datos en frontend (segundos)
CACHE_DURATION=300
# Límite de items en cache
CACHE_MAX_ITEMS=1000

# Configuración de paginación
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE EXPORTACIÓN
# -----------------------------------------------------------------------------
# Formatos de exportación habilitados
EXPORT_FORMATS=xlsx,csv,pdf
# Directorio por defecto para exportaciones
EXPORT_DIR=./exports

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE NOTIFICACIONES
# -----------------------------------------------------------------------------
# Habilitar notificaciones del sistema
ENABLE_NOTIFICATIONS=True
# Sonidos de notificación
ENABLE_SOUNDS=False

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE DESARROLLO Y DEBUG
# -----------------------------------------------------------------------------
# Mostrar información de debug en UI
SHOW_DEBUG_INFO=False
# Habilitar modo desarrollador
DEVELOPER_MODE=False
# Mostrar IDs en la interfaz
SHOW_IDS=False

# Configuración de testing
TEST_MODE=False
MOCK_API_RESPONSES=False

# -----------------------------------------------------------------------------
# NOTAS IMPORTANTES
# -----------------------------------------------------------------------------
#
# 1. SEGURIDAD:
#    - Cambiar SECRET_KEY en producción
#    - Usar HTTPS en producción
#    - Rotar claves regularmente
#
# 2. PERFORMANCE:
#    - Ajustar timeouts según la red
#    - Configurar cache según el uso
#    - Monitorear uso de memoria
#
# 3. SUPABASE:
#    - Configurar RLS correctamente
#    - Hacer backup regular
#    - Monitorear uso de Storage
#
# 4. FRONTEND:
#    - Ajustar tamaño de ventana según pantalla
#    - Configurar tema según preferencias
#    - Habilitar/deshabilitar funciones según rol
#
# =============================================================================